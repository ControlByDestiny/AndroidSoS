<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.MainActivity">

    <com.sos.www.ui.customview.CustomToolBar
        android:id="@+id/act_tb_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundColor="@color/toolBarColor"
        app:title="Title"
        app:titleSize="20sp"
        app:rightIcon="@drawable/ic_setting_adjustment"
        >

    </com.sos.www.ui.customview.CustomToolBar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/act_btn_start"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/style_btn_start"
                android:text="开始游戏"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
