<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.MainActivity">

    <com.sos.www.ui.customview.CustomToolBar
        android:id="@+id/act_tb_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundColor="#FF0000"
        app:title="@string/app_name"
        app:titleSize="20sp"
        app:titleColor="@android:color/white"
        app:rightIcon="@drawable/ic_setting_adjustment"
        >

    </com.sos.www.ui.customview.CustomToolBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/act_btn_start"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/style_btn_start"
                android:text="开始游戏"
                android:textColor="#FFFFFF"
                android:elevation="2dp"
                android:layout_margin="5dp"
                android:stateListAnimator="@null"
                android:textSize="@dimen/fontSize" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
